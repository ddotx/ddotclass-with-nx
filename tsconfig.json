{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ddotclass/ui-material": ["libs/ui-material/src/index.ts"],
      "@ddotclass/validators": ["libs/validators/src/index.ts"],
      "@ddotclass/ui-navbar": ["libs/ui-navbar/src/index.ts"],
      "@ddotclass/model": ["libs/model/src/index.ts"],
      "@ddotclass/services": ["libs/services/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
